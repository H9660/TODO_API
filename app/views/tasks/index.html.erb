<link rel="stylesheet" href="taskapi/app/assets/stylesheets/application.css">
<center>
  <h1>Tasks</h1>

  <div class="grid-container">
    <% @tasks.each do |task| %>
      <div>
        <a href="<%= task_path(task) %>">
          <%= task.title %>
        </a>
      </div>
    <% end %>
  </div>
  <br>
  <h2><%= link_to "Create New Task", new_task_path %></h2>
</center>
